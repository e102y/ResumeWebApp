<%- include("../includes/header.ejs", {title: "Update " + account.account_name}); %>

<h1>Update <%= account.account_name%></h1>
<form action="/account/update" method="get">
    <input type="hidden" id="account_id" name="account_id" value="<%= account.account_id %>">
    account Name: <input id="account_name" name="account_name" type="text" value="<%= account.account_name%>"/>
    <br />
    <br />
    Email <br />
    <select id="email_id" name="email_id" multiple="multiple">
        <% for(var i=0; email.length > i; i++ ) {
            var selected = "";
            if(email[i].account_id != null) {
                selected = "selected";
            }
        %>
        <option value="<%= email[i].email_id %>" <%= selected %> ><%= email[i].street + ', ' + email[i].zipcode %></option>
        <% } %>
    </select>

    <!-- Initialize the multiselect plugin: -->
    <script type="text/javascript">
        $(document).ready(function() {
            $('#email_id').multiselect();
        });
    </script>

    <br />

    <input type="submit" />

</form>

<%- include("../includes/footer.ejs"); %>