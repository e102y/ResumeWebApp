<%- include("../includes/header.ejs", {title: "Update " + account.first_name}); %>

<h1>Update <%= account.account_name%></h1>
<form action="/account/update" method="get">
    <input type="hidden" id="account_id" name="account_id" value="<%= account.account_id %>">
    First Name: <input id="account_fname" name="account_fname" type="text" value="<%= account.first_name%>"/><br />
    Last Name: <input id="account_lname" name="account_lname" type="text" value="<%= account.last_name%>"/>
    <br />
    Email: <input id="account_email" name="account_email" type="text" value="<%= account.email%>"/>
    <br />

    <br />

    <input type="submit" />

</form>

<%- include("../includes/footer.ejs"); %>